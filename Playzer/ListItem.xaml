<UserControl x:Class="Playzer.ListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Playzer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="50"  FontFamily="Calibri" FontSize="14" Width="Auto">
    <Grid Background="#F4F4F4">
        <Image x:Name="trackImage" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="songNameLbl" Content="Song name" Margin="60,0,0,0" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <Label x:Name="songAuthorLbl" Content="Song creator" Margin="60,20,0,0" FontWeight="Light" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <ToggleButton x:Name="addBtn" Content="Add to playlist" HorizontalAlignment="Right" Width="100" VerticalAlignment="Center"  Checked="AddBtn_Checked" Margin="0,12,22,17"></ToggleButton>
    </Grid>
</UserControl>
