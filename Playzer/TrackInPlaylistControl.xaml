<UserControl x:Class="Playzer.TrackInPlaylistControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Playzer"
             mc:Ignorable="d" 
              Height="50" Width="Auto" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Grid Background="#F4F4F4">
        <Image x:Name="playlistImage" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="playlistNameLbl" Content="Playlist name" Margin="60,0,0,0" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <Label x:Name="tracksCountLbl" Content="0 songs" Margin="60,20,0,0" FontWeight="Light" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <Label x:Name="addedLbl" Visibility="Hidden" Content="added" Margin="0" Height="50" VerticalContentAlignment="Center" FontWeight="Light" HorizontalAlignment="Right" VerticalAlignment="Top"></Label>
    </Grid>
</UserControl>
